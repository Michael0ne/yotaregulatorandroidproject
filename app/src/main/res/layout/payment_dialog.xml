<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/yota_logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etCardNumber"
        android:layout_marginTop="15dp"
        android:enabled="true"
        android:hint="Номер карты"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:maxLength="20"
        android:singleLine="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etCardMonth"
            android:hint="Месяц"
            android:layout_gravity="right"
            android:singleLine="true"
            android:maxLength="2" />

        <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etCardYear"
            android:enabled="true"
            android:hint="Год"
            android:layout_gravity="right"
            android:singleLine="true"
            android:maxLength="2" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etCardHolder"
        android:hint="Имя и фамилия владельца, как на карте"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:maxLength="128" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etCardSecurityNumber"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:enabled="true"
            android:hint="CVV/CVC"
            android:singleLine="true"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Последние 3 цифры"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ccc" />

    <EditText
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etAmount"
        android:enabled="true"
        android:maxLength="5"
        android:hint="Сумма оплаты"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Оплатить"
        android:id="@+id/btnPay"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:background="#00adee"
        android:layout_marginTop="25dp" />

</LinearLayout>